<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondgris"
    tools:context="com.example.hugo.afterwork.profilFragment"

    android:id="@+id/frame_profil">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear_profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/user"
        android:paddingTop="@dimen/nav_header_vertical_spacing"/>
    <RelativeLayout
        android:id="@+id/relative_info"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin">
        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/id_user_nomprenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_nomprenom"
            android:layout_marginLeft="10dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_mail"
            android:layout_below="@+id/id_user_nomprenom"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </RelativeLayout>

</LinearLayout>
        <View
            android:id="@+id/ligne"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/back_matiere"
            android:layout_below="@+id/linear_profil"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linear_profil"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/liste_matiere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_matiere"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"/>
        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/matieres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liste_matiere"
            android:paddingTop="10dp"
            android:layout_marginLeft="50dp"
            android:textSize="14dp"/>
    </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
