<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hugo.afterwork.CoursActivity$PlaceholderFragment">
    <Button
        android:id="@+id/bouton_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bouton_play"/>
    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/bouton_play"
        />
    <TextView
        android:id="@+id/doc_non_dispo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/doc_pas_dispo"
        android:visibility="gone"/>
</RelativeLayout>
